---
import { Copyright } from "./Copyright";

const links = [
  { href: "/services", text: "Services" },
  { href: "/about", text: "About" },
  { href: "/contact", text: "Contact Us" },
];
---

<footer class="flex items-end justify-between p-8 pt-32">
  <p><Copyright client:load /> Agathist</p>

  <nav>
    <ul class="flex gap-6">
      {
        links.map((link) => (
          <a class="text-gray-300 hover:text-white" href={link.href}>
            {link.text}
          </a>
        ))
      }
    </ul>
  </nav>
</footer>
