---
import Container from "./Container.astro";
---

<Container>
  <div class="flex flex-col items-center gap-12 lg:items-start">
    <div>
      <h1
        class="heading-animation inline-block bg-gradient-to-r from-rose-500 via-pink-500 to-orange-400 bg-clip-text text-6xl font-bold leading-tight text-transparent sm:text-8xl sm:leading-tight lg:text-[14rem]"
      >
        Agathist
      </h1>

      <p class="font-serif text-lg lg:text-3xl">Good software by good people</p>
    </div>

    <a
      class="rounded-full bg-white/10 px-8 py-4 text-2xl text-pink-500 transition-all hover:bg-white/[0.15] active:-translate-y-[1px]"
      href="/services"
    >
      See how we can help &rarr;
    </a>
  </div>
</Container>

<style>
  .heading-animation {
    background-size: 300%;
    animation: move-gradient 3s ease infinite;
  }

  @keyframes move-gradient {
    0%,
    100% {
      background-position: 0% 0%;
    }
    50% {
      background-position: 100% 0%;
    }
  }
</style>
