---
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'
import '../styles/globals.css'
import '../styles/fonts.css'

interface Props {
  author?: string
  description?: string
  title: string
}

const DEFAULT_DESCRIPTION =
  'Agathist is a software development agency with expertise in TypeScript, JavaScript and React. We build good software with good people.'

const { author, description = DEFAULT_DESCRIPTION, title } = Astro.props
---

<!doctype html>
<html class="h-full bg-slate-900 font-sans text-white" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon-32x32.png" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:type" content="website" />
    <title>{title}</title>
    <meta property="og:title" content={title} />
    <meta property="twitter:title" content={title} />
    <meta name="apple-mobile-web-app-title" content="Agathist" />
    <meta property="og:site_name" content="Agathist" />
    <meta name="description" property="og:description" content={description} />
    <meta name="twitter:description" content={description} />
    {author && <meta name="author" content={author} />}
    <meta
      property="og:image"
      content="https://agath.ist/images/agathist-og-image.png"
    />
    <meta
      name="twitter:image:src"
      content="https://agath.ist/images/agathist-og-image.png"
    />

    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>

  <body class="flex min-h-full flex-col">
    <Header />

    <div class="grow">
      <slot />
    </div>

    <div class="pt-48">
      <Footer />
    </div>
  </body>
</html>
